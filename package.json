{
  "name": "welcome-home-property",
  "version": "1.0.0",
  "description": "Blockchain-based real estate tokenization platform for fractional property ownership on Alkebuleum",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:alkebuleum": "hardhat run scripts/deploy.js --network alkebuleum",
    "deploy:alkebuleum-testnet": "hardhat run scripts/deploy.js --network alkebuleumTestnet",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:gas-manager:sepolia": "hardhat run scripts/deploy-gas-fee-manager.js --network sepolia",
    "deploy:gas-manager:alkebuleum": "hardhat run scripts/deploy-gas-fee-manager.js --network alkebuleum",
    "deploy:gas-manager:alkebuleum-testnet": "hardhat run scripts/deploy-gas-fee-manager.js --network alkebuleumTestnet",
    "deploy:gas-manager:local": "hardhat run scripts/deploy-gas-fee-manager.js --network localhost",
    "deploy:rate-limiter:sepolia": "hardhat run scripts/deploy-rate-limiter.js --network sepolia",
    "deploy:rate-limiter:alkebuleum": "hardhat run scripts/deploy-rate-limiter.js --network alkebuleum",
    "deploy:rate-limiter:alkebuleum-testnet": "hardhat run scripts/deploy-rate-limiter.js --network alkebuleumTestnet",
    "deploy:rate-limiter:local": "hardhat run scripts/deploy-rate-limiter.js --network localhost",
    "deploy:orchestrator:sepolia": "hardhat run scripts/deploy-transaction-orchestrator.js --network sepolia",
    "deploy:orchestrator:alkebuleum": "hardhat run scripts/deploy-transaction-orchestrator.js --network alkebuleum",
    "deploy:orchestrator:alkebuleum-testnet": "hardhat run scripts/deploy-transaction-orchestrator.js --network alkebuleumTestnet",
    "deploy:orchestrator:local": "hardhat run scripts/deploy-transaction-orchestrator.js --network localhost",
    "test:gas-manager": "hardhat test test/GasFeeManager.test.js",
    "test:rate-limiter": "hardhat test test/RateLimiter.test.js",
    "test:orchestrator": "hardhat test test/TransactionOrchestrator.test.js",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "size": "hardhat size-contracts",
    "verify:sepolia": "hardhat run scripts/verify-deployment.js --network sepolia",
    "verify:alkebuleum": "hardhat verify --network alkebuleum",
    "verify:alkebuleum-testnet": "hardhat verify --network alkebuleumTestnet",
    "flatten": "hardhat flatten",
    "coverage": "hardhat coverage",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix"
  },
  "keywords": [
    "blockchain",
    "real-estate",
    "tokenization",
    "defi",
    "ethereum",
    "alkebuleum",
    "property",
    "governance",
    "kyc"
